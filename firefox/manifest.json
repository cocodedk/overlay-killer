{
  "manifest_version": 2,
  "name": "Overlay Killer",
  "version": "1.0",
  "description": "Kills overlays and restores scrollbars.",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "overlay-killer@example.com"
    }
  }
}
